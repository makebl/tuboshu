{
  "name": "tuboshu",
  "version": "v1.5.1",
  "main": "app/main.js",
  "type": "module",
  "scripts": {
    "start:debug": "electron --enable-logging --log-file=electron.log --trace-warnings .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "author": {
    "name": "deepshit2025",
    "email": "lyf200@qq.com"
  },
  "license": "ISC",
  "description": "tuboshu",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "conf": "^13.1.0",
    "fingerprint-generator": "^2.1.63",
    "sylviejs": "^0.0.19"
  },
  "build": {
    "appId": "com.tuboshu.tuboshu",
    "productName": "Tuboshu",
    "npmRebuild": false,
    "files": [
      "**/*",
      "!.github/**/*",
      "!.git/**/*",
      "!.idea/**/*",
      "!gui/setting/**/*",
      "!dist/*",
      "!node_modules/**/{.cache,.bin,test}"
    ],
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "build/mac_icon.icns",
      "identity": null,
      "artifactName": "${productName}-Setup-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": "nsis",
      "icon": "build/win_icon.ico",
      "artifactName": "${productName}-Setup-${version}-win-${arch}.${ext}"
    },
    "linux": {
      "category": "utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/linux_icon.png",
      "artifactName": "${productName}-Setup-${version}-linux-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    }
  }
}
